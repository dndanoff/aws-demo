{
    "name": "aws-demo",
    "author": "dndanoff",
    "license": "ISC",
    "version": "1.0.0",
    "description": "A simple project to go through general Serverless concepts",
    "engines": {
        "node": ">=18.12.1",
        "npm": ">=8.19.3"
    },
    "type": "module",
    "scripts": {
        "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
        "test:cov": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --verbose --coverage",
        "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --verbose --watchAll",
        "lint": "run-s lint:*",
        "lint:format": "prettier --write \"**/*.js\"",
        "lint:dep-versions": "ensure-wildcard-free-dependencies",
        "lint:eslint": "eslint \"./src/\" --max-warnings=0",
        "awslocal:start": "docker compose -f localstack/docker-compose.yml up -d",
        "awslocal:stop": "docker compose -f localstack/docker-compose.yml stop && shx rm -rf localstack/volume",
        "awslocal:deploy": "serverless deploy --stage local",
        "awslocal": "aws --endpoint-url http://localhost:4566"
    },
    "dependencies": {
        "@aws-sdk/client-dynamodb": "3.267.0",
        "envalid": "7.3.1",
        "pino": "8.7.0",
        "uuid": "9.0.0",
        "yup": "1.0.0"
    },
    "devDependencies": {
        "@jest/globals": "29.4.2",
        "cross-env": "7.0.3",
        "ensure-wildcard-free-dependencies": "1.1.5",
        "eslint": "8.26.0",
        "eslint-config-airbnb": "19.0.4",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-jest": "27.1.3",
        "eslint-plugin-prettier": "4.2.1",
        "jest": "29.2.2",
        "jest-environment-node": "29.2.2",
        "jest-fail-on-console": "3.0.2",
        "jest-watch-typeahead": "2.2.0",
        "npm-run-all": "4.1.5",
        "serverless-iam-roles-per-function": "^3.2.0",
        "serverless-localstack": "^1.0.2",
        "shx": "0.3.4"
    }
}
